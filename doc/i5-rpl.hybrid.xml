    <cpu_affinity>
      <pcpu>
        <pcpu_id>0</pcpu_id>
        <real_time_vcpu>n</real_time_vcpu>
      </pcpu>
    </cpu_affinity>
    <os_config>
      <kern_type>KERNEL_BZIMAGE</kern_type>
      <kern_mod>placeholder</kern_mod>
    </os_config>
    <load_order>PRE_LAUNCHED_VM</load_order>
    <name>VM1</name>
  </vm>
  <vm id="2">
    <vm_type>STANDARD_VM</vm_type>
    <console_vuart>COM Port 1</console_vuart>
